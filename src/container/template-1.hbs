<div class="page">
    <div class="page-content">
        <div class="page_block">
            <header class="header row g-0">
                <div class="col-3">
                    {{>logo}}
                </div>
                <nav class="header_link col-9">
                    {{!-- {{>nav list=header isVertical=true}} --}}
                    <div class=" header_nav_right ">
                        {{>nav list=header}}
                    </div>
                </nav>

            </header>
            {{!-- {{>divider}} --}}
        </div>
        {{!-- {{>hero data=hero}} --}}

        {{>hero title=hero.title text=hero.text}}
        {{!-- without data --}}
        {{!-- {{>hero title='hello'text='hello word' }} --}}
        <div class="page_block">
            <main class="row g-0  plans">
                {{#each plans}}
                <div class="col plans_card">
                    {{>card data=this}}
                </div>
                {{!-- <div class="col plans_card">
                    price
                </div>
                <div class="col plans_card">
                    price
                </div> --}}
                {{/each}}
            </main>
        </div>
        <div class="page_block">

            <footer class="row footer g-0">
                <div class="col-3">
                    {{>logo}}
                    <span class="footer-copyright">Copyright 2023-2024</span>
                </div>
                {{#each footer}}
                <div class="col-3">
                    <span class="footer-title"> {{title}} </span>
                    {{>nav list=links isVertical=true}}
                </div>
                {{/each}}
            </footer>
        </div>
    </div>
</div>