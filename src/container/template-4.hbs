<header class="header ">
    <div class="">
        {{>logo}}
    </div>
    <nav class="header_link ">
        {{!-- {{>nav list=header isVertical=true}} --}}
        <div class=" header_nav_right ">
            {{>nav list=header}}
        </div>
    </nav>
</header>
{{#with main}}
<div class="hero"> <img src="{{image}} " alt="Hero image" class="hero_photo">
    <div class="hero_content">
        <h1 class="hero_title">
            {{heading}}
        </h1>
        <p class="hero_text">
            {{descriotion}}
        </p>
        <a href=" {{href}} " class="main_button"> {{button}} </a>
    </div>

</div>
{{/with}}
<main class="blog">
    {{#each featured}}
    {{>cardBlog2 data=this}}
    {{/each}}
</main>

<div class="form">
    {{#each actions}}
    <div class="form_content">
        <h3 class="form_title"> {{heading}} </h3>
        {{!-- <p class="form_info">{{info}} </p> --}}

        <div class="form_action">
            <a href=" {{url}} " class="form_button"> {{text}} </a>
        </div>
    </div>
    {{/each}}
</div>


<footer class="footer ">
    <div class="">
        {{>logo}}
        <span class="footer-copyright">Â© 2023</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer-title"> {{title}} </span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>