<header class="header ">
    <a href="#test">
        {{>logo}}
    </a>
    <nav class="header_link ">
        {{!-- {{>nav list=header isVertical=true}} --}}
        <div class=" header_nav_right ">
            {{>nav list=header}}
        </div>
    </nav>
</header>
<main class="main">
    {{#with messages}}
    <div class="messages">
        <h1 class="messages_title">
            {{title}}
        </h1>
        {{#each list}}
        <div class="list">
            <strong class="msg_name"> {{name}}</strong>
            <span class="msg_day">{{day}}</span>
            <p class="msg_text">{{message}}</p>

        </div>
        {{/each}}
        <a href="https://getbootstrap.com/docs/4.0/examples/offcanvas/" class="messages_link">All messages</a>
    </div>
    {{/with}}

    <div class="form">
        {{#with form}}
        <form class="form_card">
            <strong class="form_title">{{title}} </strong>

            <div class="form_input_list">
                {{#each inputs}}
                <input type="{{type}} " placeholder="{{placeholder}} " class="form_input" name="{{name}}"
                    id="form_input-{{id}}  ">
                {{/each}}
            </div>



            {{#with checkbox}}
            <div class="form_checkbox_box">
                <input type="checkbox" class="form_checkbox" id="{{name}} ">

                <label class="form_label" for="{{name}} "> {{label}} </label>
            </div>
            {{/with}}
            <button type="submit" class="form_button"> {{button}} </button>
            <p class="form_info"> {{info}} </p>
        </form>
        {{/with}}
    </div>


</main>
<section class="advantages">
    {{#each advantages}}
    <div class="advantages_card ">
        <h2 class="advantages_title"> {{title}}</h2>
        <p class="advantages_text">{{text}}</p>
    </div>
    {{/each}}
</section>

<footer class="footer" id="test">
    <div class="">
        {{>logo}}
        <span class="footer-copyright">Â© 2023</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer-title"> {{title}} </span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>