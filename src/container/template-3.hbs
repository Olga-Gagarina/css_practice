<main class="blog">
    {{#each blog}}
    {{>cardBlog data=this}}
    {{/each}}
</main>
<section>
    {{#with form}}
    <div class="form">
        <div class="form_content">
            <h3 class="form_title"> {{title}} </h3>
            <p class="form_info">{{info}}<span class="ex">x</span></p>
        </div>
        <div class="form_action">
            <a href="{{href}} " class="form_button"> {{button}} </a>
        </div>

    </div>
    {{/with}}
</section>

<footer class="footer" id="test">
    <div class="">
        {{>logo}}
        <span class="footer-copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer-title"> {{title}} </span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>
