<div class="page">
    <div class="page-content">
        <header class="page_block">
            <div class="header row g-0">
                <div class="col-3">
                    {{>logo}}
                </div>
                <nav class="header_link col-9">
                    {{!-- {{>nav list=header isVertical=true}} --}}
                    <div class=" header_nav_right ">
                        {{>nav list=header}}
                    </div>
                </nav>
            </div>
        </header>

        {{!-- {{>divider}} --}}

        {{!-- {{>hero data=hero}} --}}
        <section class="page_block">
            <div class="hero">
                {{#with hero}}
                {{>hero title=title text=text}}
                <a class="button" href="{{button.url}} ">{{button.text}} </a>
                {{/with}}
            </div>
        </section>
        {{!-- without data --}}
        {{!-- {{>hero title='hello'text='hello word' }} --}}
        <section class="page_block">
            <div class="row g-4">
                {{#each preview}}
                <div class=" col-6">
                    {{> cardPreview data=this }}
                </div>
                {{/each}}

            </div>
        </section>
        <main class="page_block">
            <div class="main">
                <div class="row g-0">
                    <div class="col-12">
                        <div class="list_header">
                            <div class="row g-0 ">
                                <div class="col-6">
                                    <h2 class="list_title">List of posts</h2>
                                </div>
                                <div class="col-6">
                                    <div class="category_list">
                                        {{#each categories}}
                                        <button class="category_button">
                                            {{text}}
                                        </button> {{/each}}
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="list col-7">
                            {{!-- {{#each news}} --}}
                            {{>cardPost data=news }}
                            {{!-- {{/each}} --}}

                        </div>

                        <div class="col-4">
                            <aside class="list_aside ">
                                <div class="about">
                                    <h4 class="about_title">About </h4>
                                    <p class="about_text">{{about}} </p>
                                </div>
                                {{>linkList data=archive title="Archives"}}
                                {{>linkList data=social title="Social"}}
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="page_block">

            <div class="row footer g-0">
                <div class="col-3">
                    {{>logo}}
                    <span class="footer-copyright">Copyright 2023-2024</span>
                </div>
                {{#each footer}}
                <div class="col-3">
                    <span class="footer-title"> {{title}} </span>
                    {{>nav list=links isVertical=true}}
                </div>
                {{/each}}
            </div>
        </footer>
    </div>
</div>