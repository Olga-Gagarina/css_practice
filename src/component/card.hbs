{{#with data}}
<div class="card">

    <div class="card-header">
        {{name}}
    </div>
    <div class="card_block">
        <div class="card_block">
            <span class="card_price_amound">
                {{price}}
            </span>
            <span class="card_price_duration">
                /mo
            </span>
        </div>
        <ul class="card_body_description">



            {{#each features}}
            <li class="card_body_item"> {{this
                }} </li>
            {{/each}}



        </ul>
        <div class="card_block">
            <button class="btn {{#if @first}} btn-outline-primary{{else}} btn-primary {{/if}} card_button ">
                {{button}} </button>
        </div>
    </div>


</div>
{{/with}}